[branch]
  # Show most recently changed branches first
  sort = -committerdate

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[alias]
  dv = "!nvim -c DiffviewOpen"

[diff]
  tool = nvimdiff

[difftool "nvimdiff"]
  cmd = "nvim -c DiffviewOpen $LOCAL $REMOTE"
